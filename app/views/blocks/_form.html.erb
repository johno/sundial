<%= form_for(@block, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @block.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@block.errors.count, "error") %> prohibited this block from being saved:</h4>

      <ul>
      <% @block.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :started_at, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.datetime_select :started_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ended_at, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.datetime_select :ended_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :task_id, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.number_field :task_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
